{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // Añade estas dos líneas para los alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/_metronic/*": ["src/_metronic/*"],
      "@/_metronic/layout/core": ["src/_metronic/layout/core/index.ts"],// o la ruta exacta
      "@/_metronic/helpers": ["src/_metronic/helpers/index.ts"],
      "@/_metronic/assets/ts/components": ["src/_metronic/assets/ts/components/index.ts"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["src"]
}